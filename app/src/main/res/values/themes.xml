<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentFlat" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/azul_100</item>
        <item name="colorPrimaryVariant">#161D42</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/grayAzul_100</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#EE170247</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BtnPrimary" parent="Widget.Material3.Button.ElevatedButton">
        <item name="cornerRadius">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="enforceTextAppearance">false</item>
        <item name="backgroundTint">@color/azul_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BtnPrimaryv2" parent="Widget.Material3.Button.TonalButton">
        <item name="cornerRadius">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="enforceTextAppearance">false</item>
        <item name="backgroundTint">#6300BFA5</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
    <!-- Inputs!! -->
    <style name="InputBlue">
        <item name="android:drawablePadding">12dp</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">16</item>
        <item name="android:background">@drawable/input_blue</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteInterRegular30">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TealInterRegular28">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="WhiteMonstMedium15">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="BlueLexMedium15">
        <item name="android:fontFamily">@font/actor</item>
        <item name="android:textColor">@color/azul_main</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ImageView.Corner2" parent="">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="WhiteInterRegular10">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="GrayInterRegular10">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">#292B2E</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- BottomNav -->
    <style name="RentFlat.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#00FFFFFF</item>
    </style>
    <style name="BottomNav" >
        <item name="android:background">@color/azul_100</item>
        <item name="itemPaddingTop">8dp</item>
        <item name="itemPaddingBottom">12dp</item>
        <item name="itemIconSize">22dp</item>
        <item name="itemIconTint">@color/nav_icon_color</item>
        <item name="itemTextColor">@color/nav_icon_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceInactive">@style/GrayInterRegular10</item>
        <item name="itemTextAppearanceActive">@style/WhiteInterRegular10</item>
        <item name="itemActiveIndicatorStyle">@style/RentFlat.Custom.Indicator</item>
    </style>

    <style name="ImageView.CornerCircular" parent="">
    <item name="cornerSizeTopRight">100dp</item>
    <item name="cornerSizeTopLeft">100dp</item>
    <item name="cornerSizeBottomLeft">100dp</item>
    <item name="cornerSizeBottomRight">100dp</item>
    <item name="cornerFamily">rounded</item>
</style>
    <style name="Theme.RentFlat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.RentFlat.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.RentFlat.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





</resources>