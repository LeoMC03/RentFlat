<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    app:cardCornerRadius="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#00FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#A880CBC4"
        android:layout_gravity="center_vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAdmiUsuarioFoto"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/background"
            app:shapeAppearanceOverlay="@style/ImageView.Corner2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/tvAdmiUsuarioNombre"
                style="@style/WhiteMonstMedium15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HabitaciÃ³n" />

            <TextView
                android:id="@+id/tvAdmiUsuarioNickname"
                style="@style/BlueLexMedium15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="2dp"
                android:text="Pueblo Libre"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvAdmiUsuarioDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BlueLexMedium15"
                    android:text="Amoblado: "
                    android:layout_gravity="center"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tvAdmiUsuarioDireccion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BlueLexMedium15"
                    android:text="Si"
                    android:layout_gravity="center"
                    android:textColor="@color/white" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginVertical="10dp">


            <Button
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:text="Alquilado"
                android:textSize="8sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/button3"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:text="Ver detalles"
                android:textSize="9sp" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>