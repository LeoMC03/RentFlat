<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azul_main"
    tools:context=".Cliente.ClienteInmuebleInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/llTittleNewTip"
                style="@style/TealInterRegular28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/btn_atras"
                    android:layout_marginStart="8dp"

                    android:background="?actionBarItemBackground"
                    android:contentDescription="TODO"
                    tools:ignore="ContentDescription" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/ibAdmiNewTipBack"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="?actionBarItemBackground"
                            app:srcCompat="@drawable/ic_rentflat" />

                        <TextView
                            android:id="@+id/tvTittleTip"
                            style="@style/TealInterRegular28"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="16dp"
                            android:text="RentFlat" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/WhiteInterRegular30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Inmueble"
                android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#011F37"
            android:layout_marginHorizontal="20dp">
                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/isPetImages"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="#0167BC"
                    app:iss_auto_cycle="true"
                    app:iss_delay="2000"
                    app:iss_period="2000"
                    app:iss_placeholder="@drawable/ic_name"
                    app:iss_title_background="@string/app_name">
                </com.denzcoskun.imageslider.ImageSlider>
        </LinearLayout>

            <TextView
                style="@style/InputBlue"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tvDepaDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:drawableStart="@drawable/ic_pen"/>
            <TextView
                style="@style/InputBlue"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tvDistritoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:drawableStart="@drawable/ic_location"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/tvLocacionDetalle"
                    style="@style/InputBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:drawableStart="@drawable/ic_location"
                    android:text="TextView" />

                <ImageButton
                    android:id="@+id/buttonmap"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:layout_weight="1"
                    android:text="Button"
                    android:src="@drawable/ic_location"
                    android:backgroundTint="@color/teal_200"/>
            </LinearLayout>


            <TextView
                style="@style/InputBlue"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tvAmobladoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:drawableStart="@drawable/ic_pen"/>
            <TextView
                style="@style/InputBlue"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tvCostoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:drawableStart="@drawable/ic_money"/>
            <TextView
                style="@style/InputBlue"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tvDescripcionDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:drawableStart="@drawable/ic_menu"/>

            <TextView
                style="@style/WhiteInterRegular30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Propietario"
                android:textSize="25sp" />

            <TextView
                style="@style/InputBlue"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tvPropietarioNombreDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:drawableStart="@drawable/ic_pen"/>

            <TextView
                style="@style/InputBlue"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tvPropietarioTelefonoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:drawableStart="@drawable/ic_phone"/>

            <TextView
                style="@style/InputBlue"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tvPropietariocorreoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:drawableStart="@drawable/ic_mail"/>
            <Button
                android:id="@+id/btnDenunciar"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_mail"
                android:paddingVertical="10dp"
                android:text="Denunciar"
                android:backgroundTint="#ff0000"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="100dp"
                android:layout_marginBottom="8dp"/>
            <TextView
                style="@style/InputBlue"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                android:id="@+id/tvmotivo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:lines="5"
                android:text="TextView" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnEnviar"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_mail"
                    android:paddingVertical="10dp"
                    android:visibility="gone"
                    android:text="Enviar"
                    android:layout_marginStart="80dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"/>
                <Button
                    android:id="@+id/btnCancelar"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_mail"
                    android:paddingVertical="10dp"
                    android:visibility="gone"
                    android:text="Cancelar"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnMessage"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableStart="@drawable/ic_mail"
                android:paddingVertical="10dp"
                android:text="Mensaje"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"/>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>